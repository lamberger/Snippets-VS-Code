{
/*
	// Place your snippets for PHP here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	"Print to console": {
		"prefix": "log",
		"body": [
			"console.log('$1');",
			"$2"
		],
		"description": "Log output to console"
	}
*/
"Pluggin start Wp": {
    "prefix": "wp-plug-start",
    "body": [
        "<?php",
        "/*",
            "Plugin Name: ${1:Plugin name}",
            "Plugin URI:  ${2:https://github.com/lamberger}",
            "Description: ${3:Short description of my plugin}",
            "Version:     ${4:0.1.0}",
            "Author:      ${5:Patrik Lamberger}",
            "Author URI:  ${6:http://patriklamberger.com}",
            "License:     ${7:GPL2}",
            "License URI: ${8:https://www.gnu.org/licenses/gpl-2.0.html}",
        "*/",

        "if ( ! defined( 'ABSPATH' ) ) exit;",
        "$0"
         
    ],
    "description": "General Wp plug start"
},

"Plug start css js Wp": {
		"prefix": "wp-plug-start-scripts",
		"body": [
			"<?php",
			"/*",
				"Plugin Name: ${1:Plugin name}",
				"Plugin URI:  ${2:https://github.com/lamberger}",
				"Description: ${3:Short description of my plugin}",
				"Version:     ${4:0.1.0}",
				"Author:      ${5:Patrik Lamberger}",
				"Author URI:  ${6:http://patriklamberger.com}",
				"License:     ${7:GPL2}",
				"License URI: ${8:https://www.gnu.org/licenses/gpl-2.0.html}",
			"*/",

			"if ( ! defined( 'ABSPATH' ) ) exit;",
			"$0",
			"function pjl_${9:name}_styles() { ",
				"wp_register_style('pjl_${9:name}_stylesheet', plugins_url('css/pjl_${9:name}.css', __FILE__), array(), '${10:a date}', 'all');",
				"wp_enqueue_style('pjl_${9:name}_stylesheet');",
			"}",
			"add_action( 'admin_enqueue_scripts', 'pjl_${9:name}_styles' );",
			
			"function pjl_${9:name}_scripts() {",
				"wp_register_script('pjl_${9:name}_script', plugins_url('js/pjl_${9:name}.js', __FILE__), array('jquery'),'${11:1.1}', true);",
				"wp_enqueue_script('pjl_${9:name}_script');",
			"}",
			"add_action( 'admin_enqueue_scripts', 'pjl_${9:name}_scripts' );" 
		],
		"description": "Wp plug start with register, enqueuing scripts"
	}
}
